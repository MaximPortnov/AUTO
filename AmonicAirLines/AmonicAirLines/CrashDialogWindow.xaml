<Window x:Class="AmonicAirLines.CrashDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AmonicAirLines"
        mc:Ignorable="d"
        Title="Crash Description" Height="200" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <TextBox x:Name="CrashDescriptionTextBox" TextWrapping="Wrap" Height="100" Width="250" Margin="0,0,0,10" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="System" Width="100" Margin="5" Click="SystemButton_Click"/>
                <Button Content="Software" Width="100" Margin="5" Click="SoftwareButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid> 
</Window>
