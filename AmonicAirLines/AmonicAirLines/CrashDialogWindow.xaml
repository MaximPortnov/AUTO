<Window x:Class="AmonicAirLines.CrashDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AmonicAirLines"
        mc:Ignorable="d"
        MinHeight="210"
        MinWidth="300"
        Title="Crash Description" Height="200" Width="300">
    <Grid>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <TextBox Grid.Row="0" x:Name="CrashDescriptionTextBox" TextWrapping="Wrap" Margin="0,0,0,10" />
            <Grid Grid.Row="2" HorizontalAlignment="Center" Height="25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="90"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="System" Click="SystemButton_Click"/>
                <Button Grid.Column="2" Content="Software" Click="SoftwareButton_Click"/>
            </Grid>
            
        </Grid>
    </Grid> 
</Window>
